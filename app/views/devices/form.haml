.row
  .col-md-offset-3.col-md-6
    = form_for @device, html: { class: 'form-horizontal well' } do |f|
      .form-group
        = f.label :name, class: 'col-sm-3 control-label' do
          Name
          %span{:style => "color:red;"} *
        .col-sm-7
          = f.text_field :name, autofocus: true, class: 'form-control'
      .form-group
        = f.label :ip_address, class: 'col-sm-3 control-label' do
          IP Address
          %span{:style => "color:red;"} *
        .col-sm-7
          = f.text_field :ip_address, class: 'form-control'
      %hr.hr-ref
      .form-group
        .col-sm-7.col-sm-offset-3
          = f.submit (@device.new_record? ? 'Create' : 'Update'), class: 'btn btn-primary btn-lg', data: { disable_with: "Please wait..." }

:javascript
  // We prevent accidental form submit on hitting enter
  $(document).on('keydown', function(event) {
    var ENTER = 13;
    if(event.keyCode == ENTER) {
      event.preventDefault();
      return false;
    }
  });
