.row
  .col-md-offset-3.col-md-6
    = form_for @config_setting, html: { class: 'form-horizontal well' } do |f|
      .form-group
        = f.label :title, class: 'col-sm-3 control-label' do
          Title
          %span{:style => "color:red;"} *
        .col-sm-7
          = f.text_field :title, autofocus: true, class: 'form-control'
      .form-group
        = f.label :setting, class: 'col-sm-3 control-label' do
          Setting
          %span{:style => "color:red;"} *
        .col-sm-7
          = f.text_field :setting, class: 'form-control'

      .form-group
        .col-sm-6.col-sm-offset-3
          %span.text-muted
            %em
              %span{:style => "color:red;"} *
              Indicates required field
      %hr.hr-ref
      .form-group
        .col-sm-7.col-sm-offset-3
          = f.submit (@config_setting.new_record? ? 'Create' : 'Update'), class: 'btn btn-primary btn-lg', data: { disable_with: "Please wait..." }


:javascript
  // We prevent accidental form submit on hitting enter
  $(document).on('keydown', function(event) {
    var ENTER = 13;
    if(event.keyCode == ENTER) {
      event.preventDefault();
      return false;
    }
  });
